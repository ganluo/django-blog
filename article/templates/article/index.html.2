{% extends "base.html" %}
{% block content %}
    {% if latest_article_list %}
    <div class="posts">
        {% for post in latest_article_list %}
        <section class="post">
            <header class="post-header">
            <h2 class="post-title"> <a href="/{{post.pub_date | date:'Y/m/d'}}/{{ post.title }}/">{{ post.title }}</a></h2>

                <p class="post-meta">
                Date:  <a class="post-author" href="#">{{post.pub_date | date:"Y-m-d"}}</a> <a class="post-category post-category-js" href="#">{{ post.category }}</a>
                </p>
            </header>

                <div class="post-description">
                    <p>
                        {{ post.content }}
                    </p>
                </div>
        </section>
    {% endfor %}
    </div>
    {% endif %}
{% endblock %}
